#!/bin/bash

  # Install LWP for URLGET
  apt-get install -y libwww-perl

  ## Install CSF/LFD
  cd /usr/src
  wget -O /tmp/csf.tgz https://download.configserver.com/csf.tgz
  tar -xzf /tmp/csf.tgz
  cd csf
  sh install.sh

  # Allow all local IP's through the firewall
  echo "###############################################################################
# Copyright 2006-2018, Way to the Web Limited
# URL: http://www.configserver.com
# Email: sales@waytotheweb.com
###############################################################################
# The following IP addresses will be ignored by all lfd checks
# One IP address per line
# CIDR addressing allowed with a quaded IP (e.g. 192.168.254.0/24)
# Only list IP addresses, not domain names (they will be ignored)
#

127.0.0.1
192.168.0.1/32
192.168.0.2/31
192.168.0.4/30
192.168.0.8/29
192.168.0.16/28
192.168.0.32/27
192.168.0.64/26
192.168.0.128/25
192.168.1.0/24
192.168.2.0/23
192.168.4.0/22
192.168.8.0/21
192.168.16.0/20
192.168.32.0/19
192.168.64.0/18
192.168.128.0/17
10.0.0.1/32
10.0.0.2/31
10.0.0.4/30
10.0.0.8/29
10.0.0.16/28
10.0.0.32/27
10.0.0.64/26
10.0.0.128/25
10.0.1.0/24
10.0.2.0/23
10.0.4.0/22
10.0.8.0/21
10.0.16.0/20
10.0.32.0/19
10.0.64.0/18
10.0.128.0/17
" > /etc/csf/csf.ignore

  # Enable LFD (Login Failure Daemon)
  /bin/sed -i -- 's,TESTING = "1",TESTING = "0",g' /etc/csf/csf.conf

  # Enable and start CSF/LFD
  echo "You're about to lose connection as the firewall starts. Reconnect."
  csf -e
  csf -R
